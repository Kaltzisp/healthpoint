{
    "compilerOptions": {
        // Compilation options.
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "Node",
        // Type-checking options.
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "removeComments": true,
        // Build options.
        "baseUrl": "./src",
        "rootDir": "./src",
        "outDir": "./build",
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react"
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules"]
}
